#include<stdio.h>
int count=0;
void func(int n)
{
    if(n==1)
     
    {
        count++;
        
    }
    else
    {
     count++;   
     for(int i=1; i<=n; i++)
     {
       count++;
       count++;
       for(int j=1; j<=n; j++)
       {
          count++;
          count++;
         
          break;
       }count++;
     }count++;
   }                      
 }
 int main(){
     int n;
     scanf("%d",&n);
     func(n);
     printf("%d",count);
 }
